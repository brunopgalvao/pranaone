<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: 178 %>
        <p><h1><%= @user.name %></h1><p>
        <p><span class="badge"><%= @user.instructor? ? "Instructor" : nil %></span>
        <span class="badge"><%= @user.admin? ? "Admin" : nil %></span></p>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.instructor? %>
      <% if @user.microposts.any? %>
        <h3>Posts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    <% end %>
  </div>
</div>