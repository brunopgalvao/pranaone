<p id="notice"><%= notice %></p>

<h1>Classes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @yoga_classes.each do |yoga_class| %>
      <tr>
        <td><%= yoga_class.name %></td>
        <td><%= yoga_class.description %></td>
        <td><%= yoga_class.user.name %></td>
        <td><%= link_to 'Show', yoga_class %></td>
        <td><%= link_to 'Edit', edit_yoga_class_path(yoga_class) %></td>
        <td><%= link_to 'Destroy', yoga_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

